        <activity
            android:name="com.suricapp.views.ProfilActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.suricapp.views.CategoriesActivity"
            android:label="@string/title_activity_categories" >
        </activity>


        <meta-data
            android:name="DATABASE"
            android:value="suricapp.db" />
        <meta-data
            android:name="VERSION"
            android:value="1" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="com.suricapp.projetcommun" />
