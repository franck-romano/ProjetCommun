        <activity
            android:name="com.suricapp.views.DetailMessageActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.suricapp.views.MapActivity"
            android:label="@string/app_name" >
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyCX2kksUnbBg5DFYk6FP6wzrg-W0IIUhUc" />

        <activity
            android:name="com.suricapp.views.TimelineActivity"
