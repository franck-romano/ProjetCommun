<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@layout/border_bottom_top_blue_back_white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:layout_marginTop="5dp"
        android:orientation="vertical">
            <TextView
                android:id="@+id/activity_detail_message_row_pseudo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pseudo"
                android:layout_marginLeft="10dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="2dp"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/normal_text_color"
                android:layout_gravity="left"/>
        <TextView
            android:id="@+id/activity_detail_message_row_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fezffezf"
            android:layout_marginTop="2dp"
            android:paddingLeft="10dp"
            android:textSize="16dp"
            android:textColor="@color/normal_text_clear_color"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="2dp"
            android:gravity="right">
            <TextView
                android:id="@+id/activity_detail_message_row_heure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="heure"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
